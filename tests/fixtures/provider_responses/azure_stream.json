        { "choices": [{ "delta": { "tool_calls": [{ "index": 0, "function": { "arguments": ": \"/tmp/test.txt\"}" } }] } }] },
        {
          "choices": [{ "delta": {}, "finish_reason": "tool_calls" }],
          "usage": { "prompt_tokens": 20, "completion_tokens": 15, "total_tokens": 35 }
