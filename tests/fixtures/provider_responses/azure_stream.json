        { "choices": [{ "delta": { "role": "assistant", "tool_calls": [{ "index": 0, "id": "call_add01", "type": "function", "function": { "name": "add", "arguments": "" } }] } }] },
        { "choices": [{ "delta": { "tool_calls": [{ "index": 0, "function": { "arguments": "{\"a\":2,\"b\":3}" } }] } }] },
