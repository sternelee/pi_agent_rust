{
  "extension": {
    "id": "file-trigger",
    "source": { "path": "file-trigger/file-trigger.ts" }
  },
  "scenarios": [
    {
      "id": "scn-file-trigger-reg-001",
      "kind": "registration",
      "summary": "Verifies session_start event handler is registered",
      "expect": {
        "event_hooks_contains": ["session_start"]
      }
    },
    {
      "id": "scn-file-trigger-pos-001",
      "kind": "event",
      "summary": "Fires session_start event to initialize file trigger watchers",
      "event_name": "session_start",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-file-trigger-neg-001",
      "kind": "event",
      "summary": "Fires unsupported event; expects error",
      "event_name": "unsupported_event",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
