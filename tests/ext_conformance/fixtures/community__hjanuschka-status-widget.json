{
  "extension": {
    "id": "community/hjanuschka-status-widget",
    "source": { "path": "community/hjanuschka-status-widget/status-widget.ts" }
  },
  "scenarios": [
    {
      "id": "scn-hjanuschka-status-widget-reg-001",
      "kind": "registration",
      "summary": "Verifies status commands and event handlers are registered",
      "expect": {
        "commands_contains": ["status", "status-refresh"],
        "event_hooks_contains": ["session_shutdown", "session_start"]
      }
    },
    {
      "id": "scn-hjanuschka-status-widget-pos-001",
      "kind": "command",
      "summary": "Invokes status command",
      "command_name": "status",
      "input": {
        "arguments": ""
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-hjanuschka-status-widget-pos-002",
      "kind": "event",
      "summary": "Fires session_start event",
      "event_name": "session_start",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-hjanuschka-status-widget-neg-001",
      "kind": "event",
      "summary": "Fires unsupported event; expects error",
      "event_name": "unsupported_event",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
