{
  "extension": {
    "id": "npm/pi-messenger",
    "source": { "path": "npm/pi-messenger/index.ts" }
  },
  "scenarios": [
    {
      "id": "scn-npm-pi-messenger-reg",
      "kind": "registration",
      "summary": "Validates tool, command, and event hook registrations",
      "expect": {
        "tool_count": 1,
        "event_hooks_contains": ["session_start", "agent_end", "tool_call"]
      }
    },
    {
      "id": "scn-npm-pi-messenger-tool-pos",
      "kind": "tool",
      "summary": "Invokes pi_messenger tool with basic args",
      "tool_name": "pi_messenger",
      "input": {
        "arguments": {
          "message": "hello"
        }
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-npm-pi-messenger-tool-neg",
      "kind": "tool",
      "summary": "Invokes pi_messenger with empty args expecting error",
      "tool_name": "pi_messenger",
      "input": {
        "arguments": {}
      },
      "expect": {
        "is_error": true
      }
    },
    {
      "id": "scn-npm-pi-messenger-cmd-pos",
      "kind": "command",
      "summary": "Invokes messenger command",
      "command_name": "messenger",
      "input": {
        "arguments": ""
      },
      "expect": {
        "no_error": true
      }
    }
  ]
}
