{
  "extension": {
    "id": "npm/vaayne-pi-web-tools",
    "source": { "path": "npm/vaayne-pi-web-tools/index.ts" }
  },
  "scenarios": [
    {
      "id": "scn-npm-vaayne-web-tools-reg",
      "kind": "registration",
      "summary": "Validates tool registrations for web-fetch and web-search",
      "expect": {
        "tool_count": 2
      }
    },
    {
      "id": "scn-npm-vaayne-web-tools-tool-pos",
      "kind": "tool",
      "summary": "Invokes web-search tool with basic args",
      "tool_name": "web-search",
      "input": {
        "arguments": {
          "query": "test search"
        }
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-npm-vaayne-web-tools-tool-neg",
      "kind": "tool",
      "summary": "Invokes web-search with empty args expecting error",
      "tool_name": "web-search",
      "input": {
        "arguments": {}
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
