{
  "extension": {
    "id": "community/prateekmedia-checkpoint",
    "source": {
      "path": "community/prateekmedia-checkpoint/checkpoint.ts"
    }
  },
  "scenarios": [
    {
      "id": "scn-prateekmedia-checkpoint-reg-001",
      "kind": "registration",
      "summary": "Verifies event hooks registered for prateekmedia-checkpoint",
      "expect": {
        "event_hooks_contains": [
          "session_start",
          "session_switch",
          "turn_start"
        ]
      }
    },
    {
      "id": "scn-prateekmedia-checkpoint-evt-pos-001",
      "kind": "event",
      "summary": "Fires session_start event",
      "event_name": "session_start",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-prateekmedia-checkpoint-evt-neg-001",
      "kind": "event",
      "summary": "Fires unsupported event; expects graceful no-op or error",
      "event_name": "unsupported_event",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
