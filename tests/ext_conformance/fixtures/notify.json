{
  "extension": {
    "id": "notify",
    "source": { "path": "notify/notify.ts" }
  },
  "scenarios": [
    {
      "id": "scn-notify-reg-001",
      "kind": "registration",
      "summary": "Verifies agent_end event handler is registered",
      "expect": {
        "event_hooks_contains": ["agent_end"]
      }
    },
    {
      "id": "scn-notify-pos-001",
      "kind": "event",
      "summary": "Fires agent_end event to trigger desktop notification",
      "event_name": "agent_end",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-notify-neg-001",
      "kind": "event",
      "summary": "Fires unsupported event; expects error",
      "event_name": "unsupported_event",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
