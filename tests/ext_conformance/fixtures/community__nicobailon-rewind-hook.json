{
  "extension": {
    "id": "community/nicobailon-rewind-hook",
    "source": { "path": "community/nicobailon-rewind-hook/index.ts" }
  },
  "scenarios": [
    {
      "id": "scn-nicobailon-rewind-hook-reg-001",
      "kind": "registration",
      "summary": "Verifies event handler registrations for rewind-hook",
      "expect": {
        "event_hooks_contains": ["session_before_fork", "session_before_tree", "session_start", "session_switch", "turn_end", "turn_start"]
      }
    },
    {
      "id": "scn-nicobailon-rewind-hook-pos-001",
      "kind": "event",
      "summary": "Fires session_start event",
      "event_name": "session_start",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-nicobailon-rewind-hook-neg-001",
      "kind": "event",
      "summary": "Fires unsupported event; expects error",
      "event_name": "unsupported_event",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
