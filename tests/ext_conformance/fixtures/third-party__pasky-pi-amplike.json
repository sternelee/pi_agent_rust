{
  "extension": {
    "id": "third-party/pasky-pi-amplike",
    "source": {
      "path": "third-party/pasky-pi-amplike/handoff.ts"
    }
  },
  "scenarios": [
    {
      "id": "scn-pasky-pi-amplike-reg-001",
      "kind": "registration",
      "summary": "Verifies 1 tool(s), handoff command registered for pasky-pi-amplike",
      "expect": {
        "tool_count": 1,
        "commands_contains": [
          "handoff"
        ]
      }
    },
    {
      "id": "scn-pasky-pi-amplike-tool-pos-001",
      "kind": "tool",
      "summary": "Invokes session_query tool with basic arguments",
      "tool_name": "session_query",
      "input": {
        "arguments": {
          "query": "test"
        }
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-pasky-pi-amplike-tool-neg-001",
      "kind": "tool",
      "summary": "Invokes session_query tool with empty arguments; expects error",
      "tool_name": "session_query",
      "input": {
        "arguments": {}
      },
      "expect": {
        "is_error": true
      }
    },
    {
      "id": "scn-pasky-pi-amplike-cmd-pos-001",
      "kind": "command",
      "summary": "Invokes handoff command",
      "command_name": "handoff",
      "input": {
        "arguments": ""
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-pasky-pi-amplike-cmd-neg-001",
      "kind": "command",
      "summary": "Invokes nonexistent command; expects error",
      "command_name": "handoff-invalid",
      "input": {
        "arguments": ""
      },
      "expect": {
        "is_error": true
      }
    }
  ]
}
