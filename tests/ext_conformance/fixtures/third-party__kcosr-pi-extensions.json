{
  "extension": {
    "id": "third-party/kcosr-pi-extensions",
    "source": {
      "path": "third-party/kcosr-pi-extensions/apply-patch-tool/index.ts"
    }
  },
  "scenarios": [
    {
      "id": "scn-kcosr-pi-extensions-reg-001",
      "kind": "registration",
      "summary": "Verifies 1 tool(s), assistant command, event hooks registered for kcosr-pi-extensions",
      "expect": {
        "tool_count": 1,
        "commands_contains": [
          "assistant",
          "codemap",
          "skill"
        ],
        "event_hooks_contains": [
          "before_agent_start",
          "session_start",
          "tool_call"
        ]
      }
    },
    {
      "id": "scn-kcosr-pi-extensions-tool-pos-001",
      "kind": "tool",
      "summary": "Invokes apply_patch tool with basic arguments",
      "tool_name": "apply_patch",
      "input": {
        "arguments": {
          "query": "test"
        }
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-kcosr-pi-extensions-tool-neg-001",
      "kind": "tool",
      "summary": "Invokes apply_patch tool with empty arguments; expects error",
      "tool_name": "apply_patch",
      "input": {
        "arguments": {}
      },
      "expect": {
        "is_error": true
      }
    },
    {
      "id": "scn-kcosr-pi-extensions-cmd-pos-001",
      "kind": "command",
      "summary": "Invokes assistant command",
      "command_name": "assistant",
      "input": {
        "arguments": ""
      },
      "expect": {
        "no_error": true
      }
    },
    {
      "id": "scn-kcosr-pi-extensions-cmd-neg-001",
      "kind": "command",
      "summary": "Invokes nonexistent command; expects error",
      "command_name": "assistant-invalid",
      "input": {
        "arguments": ""
      },
      "expect": {
        "is_error": true
      }
    },
    {
      "id": "scn-kcosr-pi-extensions-evt-pos-001",
      "kind": "event",
      "summary": "Fires before_agent_start event",
      "event_name": "before_agent_start",
      "input": {
        "session_id": "test-session"
      },
      "expect": {
        "no_error": true
      }
    }
  ]
}
