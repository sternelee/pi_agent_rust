{
  "name": "@oh-my-pi/basics",
  "version": "1.3.3710",
  "type": "module",
  "description": "Essential tools for pi: rg (ripgrep), glob (fd), notebook_edit, and git status hook",
  "keywords": [
    "omp-plugin",
    "grep",
    "glob",
    "notebook",
    "git"
  ],
  "author": "Can Bölük <me@can.ac>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/can1357/oh-my-pi.git",
    "directory": "plugins/basics"
  },
  "omp": {
    "tools": "tools.ts",
    "runtime": "runtime.json",
    "hooks": "git-status.ts",
    "features": {
      "git-status": {
        "description": "Inject git status at the start of each conversation",
        "default": true
      },
      "grep": {
        "description": "Ripgrep-based text search tool (rg)",
        "default": true
      },
      "glob": {
        "description": "Fast file pattern matching tool (fd)",
        "default": true
      },
      "replace-all": {
        "description": "Find & replace across files using sd",
        "default": true
      },
      "ast": {
        "description": "AST-level structural search/replace using ast-grep (sg)",
        "default": true
      }
    }
  },
  "files": [
    "*.ts",
    "*.json"
  ]
}
